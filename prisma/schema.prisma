generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id Int @unique @default(autoincrement())
  email String @unique 
  password  String
  name String
  role String @default("USER")
}

model Artists {
  id Int @unique @default(autoincrement())
  name String 
  bio String?
  photoUrl String?
}

model Albums {
  id Int @unique @default(autoincrement())
  title String 
  description String?
releaseDate DateTime
coverUrl String?

}

model Playlists {
  id Int @unique @default(autoincrement())
}